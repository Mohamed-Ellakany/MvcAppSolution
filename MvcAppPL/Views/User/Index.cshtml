@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() > 0)
{
   
    <h1>All Users </h1>
    <br />
    <form asp-action="Index">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search By Name" name="SearchName">
            <input class="btn btn-outline-primary " type="submit" id="button-addon2" value="Search" />
        </div>
    </form>


    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(E => E.Id)</td>
                <td>@Html.DisplayNameFor(E => E.Fname)</td>
                <td>@Html.DisplayNameFor(E => E.Lname)</td>
          
                <td>@Html.DisplayNameFor(E => E.Email)</td>
                <td>@Html.DisplayNameFor(E => E.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(E => E.Roles)</td>
          
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>


        </thead>
        <tbody>

            @foreach (var User in Model)
            {
                <tr>

                   
                    <td>@User.Id</td>
                    <td>@User.Fname</td>
                    <td>@User.Lname</td>
                    <td>@Html.DisplayFor(u=>User.Email)</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join(",",User.Roles)</td>

                  


                    <partial name="_ButtonsPartialView" model="@User.Id" />


                </tr>
            }

        </tbody>


    </table>




}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>there is no Users </h3>

    </div>
}