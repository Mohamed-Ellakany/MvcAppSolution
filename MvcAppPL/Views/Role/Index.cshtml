

@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<a class="btn btn-success" asp-action="Create" >Create New Role</a>
@if (Model.Count() > 0)
{

    <h1>All Users </h1>
    <br />
    <form asp-action="Index">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search By Name" name="SearchName">
            <input class="btn btn-outline-primary " type="submit" id="button-addon2" value="Search" />
        </div>
    </form>


    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(E => E.Id)</td>
                <td>@Html.DisplayNameFor(E => E.RoleName)</td>
            
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>


        </thead>
        <tbody>

            @foreach (var User in Model)
            {
                <tr>


                    <td>@User.Id</td>
                    <td>@User.RoleName</td>
                   

                    <partial name="_ButtonsPartialView" model="@User.Id" />


                </tr>
            }

        </tbody>


    </table>




}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>there is no Roles </h3>

    </div>
}